  "shortcuts": [
    {
      "name": "Search Products",
      "short_name": "Search",
      "description": "Quickly search for products",
      "url": "/?action=search",
      "icons": [
        {
          "src": "/icons/search-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Price Comparison",
      "short_name": "Compare",
      "description": "Compare product prices",
      "url": "/?action=compare",
      "icons": [
        {
          "src": "/icons/compare-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Saved Products",
      "short_name": "Saved",
      "description": "View saved products",
      "url": "/?action=saved",
      "icons": [
        {
          "src": "/icons/saved-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-search.png",
      "type": "image/png",
      "sizes": "320x640",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/mobile-results.png",
      "type": "image/png",
      "sizes": "320x640",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/desktop-search.png",
      "type": "image/png",
      "sizes": "1024x768",
      "form_factor": "wide"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}